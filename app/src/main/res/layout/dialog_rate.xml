<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/bg_ra8_gra"
            android:backgroundTint="@color/gray_35383f"
            android:paddingBottom="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_50"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="@string/content_5_star"
                android:textColor="@color/text_color_app"
                android:textSize="@dimen/dp_16"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_content_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                android:textStyle="normal"
                android:visibility="gone"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_rate" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_rate_star"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_content_rate">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_star_3"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@drawable/ic_star_empty"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_star_2"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:foreground="@drawable/bg_animation_click"
                    android:src="@drawable/ic_star_empty"
                    app:layout_constraintBottom_toBottomOf="@id/imv_star_3"
                    app:layout_constraintEnd_toStartOf="@id/imv_star_3"
                    app:layout_constraintStart_toEndOf="@id/imv_star_1"
                    app:layout_constraintTop_toTopOf="@id/imv_star_3" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_star_1"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:foreground="@drawable/bg_animation_click"
                    android:src="@drawable/ic_star_empty"
                    app:layout_constraintBottom_toBottomOf="@id/imv_star_3"
                    app:layout_constraintEnd_toStartOf="@id/imv_star_2"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="@id/imv_star_3" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_star_4"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:foreground="@drawable/bg_animation_click"
                    android:src="@drawable/ic_star_empty"
                    app:layout_constraintBottom_toBottomOf="@id/imv_star_3"
                    app:layout_constraintEnd_toStartOf="@id/imv_star_5"
                    app:layout_constraintStart_toEndOf="@id/imv_star_3"
                    app:layout_constraintTop_toTopOf="@id/imv_star_3" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imvview"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/bg_ovan"
                    android:backgroundTint="@color/yellow_27ff7c05"
                    app:layout_constraintBottom_toBottomOf="@id/imv_star_5"
                    app:layout_constraintEnd_toEndOf="@id/imv_star_5"
                    app:layout_constraintStart_toStartOf="@id/imv_star_5"
                    app:layout_constraintTop_toTopOf="@id/imv_star_5" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_star_5"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:foreground="@drawable/bg_animation_click"
                    android:src="@drawable/ic_star_empty"
                    app:layout_constraintBottom_toBottomOf="@id/imv_star_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imv_star_4"
                    app:layout_constraintTop_toTopOf="@id/imv_star_3" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_plus_star_5"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_35"
                    android:layout_marginBottom="@dimen/dp_35"
                    android:src="@drawable/ic_plus_5_star"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/imvview"
                    app:layout_constraintStart_toStartOf="@id/imvview" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_28"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:text="@string/the_best_we_can_get"
                    android:textColor="@color/yellow_ea7103"
                    android:textSize="@dimen/dp_16"
                    android:gravity="end"
                    app:layout_constraintEnd_toStartOf="@id/ivArrow"
                    app:layout_constraintStart_toStartOf="@id/imv_star_1"
                    app:layout_constraintTop_toTopOf="@id/ivArrow" />

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:src="@drawable/ic_arrow_ovan"
                    app:layout_constraintEnd_toEndOf="@id/imv_star_5"
                    app:layout_constraintTop_toBottomOf="@id/imv_star_5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vetical_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnRate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/dp_8"
                android:background="@drawable/bg_ra50_gra"
                android:fontFamily="@font/roboto_medium"
                android:foreground="@drawable/bg_animation_click"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingVertical="@dimen/dp_12"
                android:text="@string/rate_us"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/btnMayBe"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_vetical_50"
                app:layout_constraintTop_toTopOf="@id/btnMayBe" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnMayBe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_ra50"
                android:backgroundTint="@color/black_1d1c1c"
                android:fontFamily="@font/roboto_medium"
                android:foreground="@drawable/bg_animation_click"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:paddingVertical="@dimen/dp_12"
                android:singleLine="true"
                android:text="@string/maybe"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_vetical_50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_rate_star" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnOnGoogle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/bg_ra50_gra"
                android:fontFamily="@font/roboto_medium"
                android:foreground="@drawable/bg_animation_click"
                android:visibility="gone"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                android:text="@string/rate_us"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/btnMayBe"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnMayBe" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_star"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@drawable/ic_rate_5_star"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
