<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_19">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dp_10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10">


            <TextView
                android:id="@+id/tvTitle"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:text="Internet Connection"
                android:textColor="@color/black_1d1c1c"
                android:textSize="@dimen/dp_18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvWifi"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/roboto_medium"
                android:text="Wifi"
                android:textColor="@color/black_1d1c1c"
                android:textSize="@dimen/dp_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/swWifi"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_marginEnd="8dp"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_switch_off"
                app:layout_constraintBottom_toBottomOf="@id/tvWifi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvWifi"
                app:layout_constraintVertical_bias="0.692" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMobileData"
                style="@style/text_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/roboto_medium"
                android:text="Mobile data"
                android:textColor="@color/black_1d1c1c"
                android:textSize="@dimen/dp_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWifi" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sw3G"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_marginEnd="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_switch_off"
                app:layout_constraintBottom_toBottomOf="@id/tvMobileData"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvMobileData" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_50"
                android:fontFamily="@font/roboto_medium"
                android:foreground="@drawable/bg_animation_click"
                android:text="Done"
                android:textColor="@color/yellow_ff7c05"
                android:textSize="@dimen/dp_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMobileData" />

            <!--  <androidx.appcompat.widget.AppCompatTextView-->
            <!--      android:id="@+id/btn_cancel"-->
            <!--      android:layout_width="match_parent"-->
            <!--      android:layout_height="wrap_content"-->
            <!--      android:layout_marginTop="@dimen/dp_5"-->
            <!--      android:fontFamily="@font/roboto_medium"-->
            <!--      android:foreground="@drawable/bg_animation_click"-->
            <!--      android:gravity="center"-->
            <!--      android:text="@string/cancel"-->
            <!--      android:textColor="@color/black"-->
            <!--      android:textSize="@dimen/dp_13" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
